{
  "name": "scraper",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "main": "dist/scraper.js",
  "type": "module",
  "scripts": {
    "start": "chokidar \"src/**/*.ts\" --initial --silent -c \"tsc && node --experimental-specifier-resolution=node dist/scraper.js\"",
    "dev": "chokidar \"src/**/*.ts\" --initial --silent -c \"tsc && node --experimental-specifier-resolution=node dist/scraper.js --dev\"",
    "log": "chokidar \"src/**/*.ts\" --initial --silent -c \"tsc && node --experimental-specifier-resolution=node dist/scraper.js --log\""
  },
  "dependencies": {
    "@google-cloud/storage": "^5.18.3",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chalk": "^5.0.1",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-plugin-import": "^2.25.4",
    "ora": "^6.1.0",
    "playwright": "^1.20.1",
    "typescript": "^4.6.3"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "dist",
      "node_modules"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-shadow": "warn",
      "no-bitwise": "warn",
      "no-else-return": "warn",
      "no-lonely-if": "warn",
      "prefer-arrow-callback": "warn",
      "prefer-const": "warn",
      "prefer-template": "warn",
      "no-alert": "error",
      "no-const-assign": "warn",
      "no-unexpected-multiline": "error",
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true
        }
      ],
      "@typescript-eslint/ban-ts-ignore": "off"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
